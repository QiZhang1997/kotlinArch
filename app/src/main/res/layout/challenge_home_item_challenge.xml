<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/ivCover"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        app:riv_corner_radius="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="4:3"
        />

    <TextView
        android:id="@+id/tvScore"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/challenge_home_score_bg"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="50积分"
        android:textColor="@color/white"
        android:textSize="@dimen/base_text_4_size"
        app:layout_constraintBottom_toBottomOf="@id/ivCover"
        app:layout_constraintLeft_toLeftOf="@id/ivCover"
        />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="决赛圈已经刷到电厂附近你觉得去哪里呢？..."
        android:textColor="@color/base_text_1_color"
        android:textSize="@dimen/base_text_3_size"
        app:layout_constraintTop_toBottomOf="@id/ivCover"
        />

    <TextView
        android:id="@+id/tvCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="9dp"
        android:ellipsize="end"
        android:text="96条有料 2365人参与"
        android:textColor="@color/base_text_3_color"
        android:textSize="@dimen/base_text_4_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintVertical_bias="0.0"
        />

</androidx.constraintlayout.widget.ConstraintLayout>