<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity"
        >

    <Button
            android:id="@+id/btnBasePage"
            android:text="basePage:带各种cover的activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    <Button
            android:id="@+id/btnPagingList"
            android:text="pagingList:自动分页的recyclerview activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    <Button
            android:id="@+id/btnFragmentActivity"
            android:text="用普通activity:承载上述fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    <Button
            android:id="@+id/btnFragmentBaseActivity"
            android:text="用BaseActivity:承载上述fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
</LinearLayout>